<?xml version="1.0"?>
<project name="Javascript compress project" basedir="." default="compile">

    <taskdef name="jscomp" classname="com.google.javascript.jscomp.ant.CompileTask"
             classpath="${basedir}/../../../compiler/compiler.jar"/>

    <target name="compile">
        <jscomp compilationLevel="simple" warning="quiet"
                debug="false" output="${basedir}/Memorion.min.js">
            <sources dir="${basedir}/">
                <file name="Cocos2d-html5.min.js" />
            </sources>
            <sources dir="${basedir}">  
                          
                <file name="src/myApp.js"/>
                <file name="src/CCCustomLoader.js"/>
                <file name="src/Instrucciones.js"/>
                <file name="src/Juego.js"/>
                <file name="src/resource.js"/>
                <file name="CCGLProgram.js"/> 
                <file name="main.js"/>
                <file name="CCLoader.js"/>  

                
            </sources>
        </jscomp>
     </target>
</project>